<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/unitNumberHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/isLeasedHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unitNumberHolder" />

    <Button
        android:id="@+id/deleteUnit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="X"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numBedroomsHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/deleteUnit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numBathroomsHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/numBedroomsHolder"
        app:layout_constraintEnd_toEndOf="@id/numBedroomsHolder"
        app:layout_constraintTop_toBottomOf="@+id/numBedroomsHolder" />

    <TextView
        android:id="@+id/areaInSqFtHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/numBathroomsHolder"
        app:layout_constraintEnd_toEndOf="@id/numBathroomsHolder"
        app:layout_constraintTop_toBottomOf="@id/numBathroomsHolder" />
</androidx.constraintlayout.widget.ConstraintLayout>