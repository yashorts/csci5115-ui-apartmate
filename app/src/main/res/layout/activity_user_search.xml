<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csci5115.group8.UserSearchActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submit_user_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/ic_done_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/searchBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/searchText2"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.9"
            android:hint="Type name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/numMatches2"
            style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.1"
            android:text="0 matches"
            app:layout_constraintLeft_toRightOf="@+id/searchText" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/filterHints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@id/searchBarLayout">

                <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_weight="0.1"
                    app:tbDefaultStatus="off"
                    app:tbMidColor="#BB0909"
                    app:tbOffColor="#B8B8B8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"
                    android:text="No condition" />

                <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_weight="0.1"
                    app:tbDefaultStatus="mid"
                    app:tbMidColor="#BB0909"
                    app:tbOffColor="#B8B8B8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"
                    android:text="Should not be" />

                <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_weight="0.1"
                    app:tbDefaultStatus="on"
                    app:tbMidColor="#BB0909"
                    app:tbOffColor="#B8B8B8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"
                    android:text="Should be" />

            </LinearLayout>

            <TableLayout
                android:id="@+id/table1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="20dp">


                <TextView
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Filters" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="300"
                        android:text="gender" />

                    <CheckBox
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:checked="true"
                        android:text="male" />

                    <CheckBox
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:checked="true"
                        android:text="female" />

                    <CheckBox
                        android:id="@+id/otherSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:checked="true"
                        android:text="other" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.9"
                        android:text="age" />

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:ems="10"
                        android:hint="from"
                        android:inputType="number"
                        android:text="" />

                    <EditText
                        android:id="@+id/age2"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:ems="10"
                        android:hint="to"
                        android:inputType="number"
                        android:text="" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.9"
                        android:text="budget" />

                    <EditText
                        android:id="@+id/maxBudget"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:ems="10"
                        android:hint="from"
                        android:inputType="number"
                        android:text="" />

                    <EditText
                        android:id="@+id/maxBudget2"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:ems="10"
                        android:hint="to"
                        android:inputType="number"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.9"
                        android:text="nativeLanguage" />

                    <EditText
                        android:id="@+id/nativeLanguage"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.9"
                        android:text="does smoke" />

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/doesSmoke"
                        android:layout_weight="0.1"
                        app:layout_constraintTop_toTopOf="@id/microwave"
                        app:tbMidColor="#BB0909"
                        app:tbOffColor="#B8B8B8" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.9"
                        android:text="drugs okay" />

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/drugsOkay"
                        android:layout_weight="0.1"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:tbMidColor="#BB0909"
                        app:tbOffColor="#B8B8B8" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.9"
                        android:text="has pets" />

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/hasPets"
                        android:layout_weight="0.1"
                        app:tbMidColor="#BB0909"
                        app:tbOffColor="#B8B8B8"
                        tools:layout_editor_absoluteX="150dp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.9"
                        android:text="parties okay" />

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/partiesOkay"
                        android:layout_weight="0.1"

                        app:tbMidColor="#BB0909"
                        app:tbOffColor="#B8B8B8" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.9"
                        android:text="can cook" />

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/canCook"
                        android:layout_weight="0.1"

                        app:tbMidColor="#BB0909"
                        app:tbOffColor="#B8B8B8"

                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.9"
                        android:text="needs private bedroom" />

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/needsPrivateBedroom"
                        android:layout_weight="0.1"

                        app:layout_constraintTop_toTopOf="@id/refrigerator"

                        app:tbMidColor="#BB0909"
                        app:tbOffColor="#B8B8B8" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.9"
                        android:text="has car" />

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/hasCar"
                        android:layout_weight="0.1"

                        app:layout_constraintTop_toTopOf="@id/oven"

                        app:tbMidColor="#BB0909"
                        app:tbOffColor="#B8B8B8" />
                </TableRow>


            </TableLayout>

            <Button
                android:id="@+id/clear_user_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
